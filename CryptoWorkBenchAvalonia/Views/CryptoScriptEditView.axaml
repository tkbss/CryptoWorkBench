<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:AvaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CryptoWorkBenchAvalonia.CryptoScriptEditView">
	<Border BoxShadow="5 5 10 2 DarkGray" Margin="5">
	<Grid RowDefinitions="*,40">
		<AvaloniaEdit:TextEditor
			Name="Editor"
			Text="Hello AvaloniaEdit!"
                           ShowLineNumbers="True"
                           FontFamily="Cascadia Code,Consolas,Menlo,Monospace"
			               HorizontalScrollBarVisibility="Auto"
                           VerticalScrollBarVisibility="Visible"/>
		<Border Grid.Row="1" BoxShadow="5 5 10 2 DarkGray" Margin="15,3,5,5">
			<StackPanel Name="StatusBar" Background="Purple"  Margin="5">
				<TextBlock Foreground="White" Name="StatusText" Text="Ready" Margin="5" FontSize="12" />
			</StackPanel>
		</Border>
	</Grid>
		</Border>
  
</UserControl>
