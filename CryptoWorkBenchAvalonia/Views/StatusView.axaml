<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:prism="http://prismlibrary.com/"
			 prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CryptoWorkBenchAvalonia.Views.StatusView">
	<Border   Background="LightGray" BoxShadow="5 5 10 2 DarkGray" Margin="5">
		<TextBlock  Text="{Binding StatusString}" TextAlignment="Center" FontSize="12" Margin="2" TextWrapping="Wrap" />
	</Border>
</UserControl>
